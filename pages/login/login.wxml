<!--pages/login/login.wxml-->
<view class="login-container">
  <image class="logo" src="/assets/images/logo@2x.png"/>
  <text class="title">蘑菇在线</text>
  <image class="login-tips" src="/assets/images/login_tips@2x.png"/>
  <button plain class="wx-login-button" open-type="getUserInfo" bindgetuserinfo="wxLogin">
    <image class="wx-login-img" src="/assets/images/wx_login@2x.png"></image>
  </button>
  <text class="phone-login" bindtap="goToPhoneLogin">手机号登录</text>
  <text class="bottom-tip">Copyright © 2020 蘑菇在线</text>
</view>
